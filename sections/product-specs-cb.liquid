{%- assign specsCb = product.metafields.prodSpecs.specs.value -%}
<div id="section-{{ section.id }}" class="{% unless section.settings.show_on_desktop %} medium--hide large--hide{% endunless %} {% unless section.settings.show_on_mobile %} small--hide{% endunless %} {{ section.settings.section_style }}" data-section-id="{{ section.id }}" data-section-type="featured-content-section">

  <div class="box">
    <div class="wrapper">

        <div class="grid">
          
          <div class="grid__item large--seven-twelfths medium--seven-twelfths">
            

              <h2 class="specs-ttle">{{ section.settings.features_section_title }}</h2>

            
            
<div class="keyfeature-left">

    {% if product.metafields.my_fields.featuresimg1cb  or product.metafields.my_fields.featurestxt_1 %}
<div class="ready-to-enjoy">
  <div class="wrap-collabsible"> <input id="collapsible1" class="toggle" type="checkbox" checked=""> <label for="collapsible1" class="lbl-toggle"><h3>{{product.metafields.my_fields.featuresh3_1}}</h3></label>
  <div class="collapsible-content">
    <div class="content-inner">
      <div class="list-of-specs">
                
{% assign bulletsCb1 = product.metafields.my_fields.featurestxt_1 | newline_to_br | split:'<br />' %}

<ul>
 {% for bulletCb1 in bulletsCb1 %}
 <li>{{bulletCb1}}</li>
 {% endfor %}
</ul>
                  
</div>
      {% if product.metafields.my_fields.featuresimg1cb %}
{{ section.settings.features_Img1_Cb | image_url: width: auto | image_tag: loading: 'lazy', crop: 'center', class: 'imageFeaturesCb' }}

{% endif %}

    </div>
  </div>
</div>                
        

  <div class="sep sepFeatures"></div>

  
</div> <!---- end ready to enjoy -->
  {% endif %}
  
  {% if product.metafields.my_fields.featuresimg2cb  or product.metafields.my_fields.featurestxt_2 %} 
              
<div class="ready-to-enjoy">
  <div class="wrap-collabsible"> <input id="collapsible2" class="toggle collapseCB" type="checkbox" checked=""> <label for="collapsible2" class="lbl-toggle"><h3>{{product.metafields.my_fields.featuresh3_2}}</h3></label>
  <div class="collapsible-content">
    <div class="content-inner">
      <div class="list-of-specs">
                
{% assign bulletsCb2 = product.metafields.my_fields.featurestxt_2 | newline_to_br | split:'<br />' %}

<ul>
 {% for bulletCb2 in bulletsCb2 %}
 <li>{{bulletCb2}}</li>
 {% endfor %}
</ul>
                  
</div>  
{% if product.metafields.my_fields.featuresimg2cb %}      
{{ section.settings.features_Img2_Cb | image_url: width: auto | image_tag: loading: 'lazy', crop: 'center', scale:2, class: 'imageFeaturesCb' }}
      
      {% endif %}
    </div>
  </div>
</div>
  
    <div class="sep sepFeatures"></div>
              
</div>  
  {% endif %}
  
  
  {% if product.metafields.my_fields.featuresimg3cb  or product.metafields.my_fields.featurestxt_3 %}
  <div class="ready-to-enjoy">
  <div class="wrap-collabsible"> <input id="collapsible3" class="toggle collapseCB" type="checkbox" checked=""> <label for="collapsible3" class="lbl-toggle"><h3>{{product.metafields.my_fields.featuresh3_3}}</h3></label>
  <div class="collapsible-content">
    <div class="content-inner">
      <div class="list-of-specs">
                
{% assign bulletsCb3 = product.metafields.my_fields.featurestxt_3 | newline_to_br | split:'<br />' %}

<ul>
 {% for bulletCb3 in bulletsCb3 %}
 <li>{{bulletCb3}}</li>
 {% endfor %}
</ul>
                  
</div>
      {% if product.metafields.my_fields.featuresimg3cb %}
{{ section.settings.features_Img3_Cb | image_url: width: auto | image_tag: loading: 'lazy', crop: 'center', scale:2, class: 'imageFeaturesCb' }}
      {% endif %}
    </div>
    
  </div>
</div>
    
      <div class="sep sepFeatures"></div>
              
</div>  
  {% endif %}
            
            
 </div>
            
            
          </div>           
          
          <div id="specTableCb" class="grid__item large--five-twelfths medium--five-twelfths {{ section.settings.text_alignment }}">
			{%- unless section.settings.title == blank -%}
              <h3 class="specs-ttle">{{ section.settings.title | escape }}</h3>
            {%- endunless -%}
            {%- unless section.settings.text == blank -%}
              <div class="rte {% if section.settings.text_size == 'large' %}lead {% endif %}">
               {%- if specsCb != blank -%}
                <table class="tableCb">
                  {%- for specCb in specsCb -%}
                  <tr><td><strong>{{specCb.spectitle}}</strong></td><td>{{specCb.spectext}}</td></tr>                    
                  {%- endfor -%}
                </table>
                {%- endif -%}
               
              </div>
            {%- endunless -%}
            {%- unless section.settings.button_label == blank -%}
              <a href="{{ section.settings.button_link }}" class="btn {{ section.settings.button_style }}">
                {{ section.settings.button_label | escape }}
              </a>
            {%- endunless -%}
          </div>
          

        </div>

    </div>
  </div>
</div>

{% schema %}
  {
    "name": "product-specs-cb",
    "class": "featured-content-section table-specs-sec",
    "settings": [
       {   
      "id": "specs_all_cb",
      "type": "richtext",
      "label": "Specs"
      }, 
	{   
      "id": "features_Img1_Cb",
      "type": "image_picker",
      "label": "Features Image 1"
      },  
{   
      "id": "features_Img2_Cb",
      "type": "image_picker",
      "label": "Features Image 2"
      },  
{   
      "id": "features_Img3_Cb",
      "type": "image_picker",
      "label": "Features Image 3"
      },  
       {
        "type": "checkbox",
        "id": "show_on_desktop",
        "label": "t:sections.featured_content.settings.show_on_desktop.label",
        "default": true
       },
       {
        "type": "checkbox",
        "id": "show_on_mobile",
        "label": "t:sections.featured_content.settings.show_on_mobile.label",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "t:sections.featured_content.settings.title.label",
        "default": "{{product.title}} Specifications"
      },
		{
        "type": "text",
        "id": "features_section_title",
        "label": "Luxury Features Title",
        "default": "{{product.title}} Luxury Features"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "t:sections.featured_content.settings.text.label",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "t:sections.featured_content.settings.section_style.label",
        "default": "pinkGrey",
        "options": [
          {
            "value": "section-blank",
            "label": "t:sections.featured_content.settings.section_style.options__1.label"
          },
          {
            "value": "section-default",
            "label": "t:sections.featured_content.settings.section_style.options__2.label"
          },
          {
            "value": "section-border",
            "label": "t:sections.featured_content.settings.section_style.options__3.label"
          },
      {
            "value": "pinkGrey",
            "label": "Primary CB Color"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "t:sections.featured_content.settings.text_size.label",
        "default": "large",
        "options": [
          {
            "value": "medium",
            "label": "t:sections.featured_content.settings.text_size.options__1.label"
          },
          {
            "value": "large",
            "label": "t:sections.featured_content.settings.text_size.options__2.label"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "t:sections.featured_content.settings.text_alignment.label",
        "default": "text-center",
        "options": [
          {
            "value": "",
            "label": "t:sections.featured_content.settings.text_alignment.options__1.label"
          },
          {
            "value": "text-center",
            "label": "t:sections.featured_content.settings.text_alignment.options__2.label"
          },
          {
            "value": "text-right",
            "label": "t:sections.featured_content.settings.text_alignment.options__3.label"
          }
        ]
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "t:sections.featured_content.settings.button_style.label",
        "default": "btn--primary",
        "options": [
          {
            "value": "",
            "label": "t:sections.featured_content.settings.button_style.options__1.label"
          },
          {
            "value": "btn--primary",
            "label": "t:sections.featured_content.settings.button_style.options__2.label"
          },
          {
            "value": "btn-outline-primary",
            "label": "t:sections.featured_content.settings.button_style.options__3.label"
          }
        ]
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "t:sections.featured_content.settings.button_label.label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.featured_content.settings.button_link.label"
      }
    ],
    "presets": [
      {
        "name": "t:sections.featured_content.presets.name",
        "category": "t:sections.featured_content.presets.category"
      }
    ]
  }
{% endschema %}
